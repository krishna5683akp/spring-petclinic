pipeline {
    agent {label 'jdk11'}
    parameters {
        choice(name: 'BRANCH', choices: ['NEW_PROJECT_1', 'main'], description: 'to build branch')
        string(name: 'MAVEN_GOAL', defaultValue: 'package', description: 'maven_goal') 
    }
    triggers {
        
         pollSCM('* * * * *')
    }
                
    stages {
        stage ('vcs') {
            steps {
                mail subject : 'build started',
                    body : 'build started',
                    to : 'madasukrishnaprasad5683@gmail.com'
                git branch: "${params.BRANCH}", url: 'https://github.com/krishna5683akp/spring-petclinic.git'

            }
        }
        stage('build') {
            steps {
                sh "mvn ${params.MAVEN_GOAL}"
            }
        }
    }
    post {
        always {
            echo "build complted"
            mail subject : 'build completed',
                    body : 'build completd',
                    to : 'madasukrishnaprasad5683@gmail.com' 
        }
        failure {
            mail subject : 'build failure',
                    body : 'build failure',
                    to : 'madasukrishnaprasad5683@gmail.com'
        }
        success {
            junit '**/surefire-reports/*xml',
            archive 'target/*.jar'
        }
    }
}