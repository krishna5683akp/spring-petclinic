pipeline {
    agent {label 'jdk11'}
    parameters { choice(name: 'BRANCH', choices: ['NEW_PROJECT_1', 'main'], description: 'to build branch') }
    stages {
        stage ('vcs') {
            steps {
                        git branch: "${params.BRANCH}", url: 'https://github.com/krishna5683akp/spring-petclinic.git'

            }
        }
        stage('build') {
            steps {
                sh 'mvn package'
            }
        }
        stage('archive junit') {
            steps {
                junit '**/surefire-reports/*xml'
            }
        }
        stage('archive artifacts') {
            steps {
                archive 'target/*.jar'
            }
        }
    }
}